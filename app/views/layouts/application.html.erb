<!DOCTYPE html>
<html>
<head>
  <title>Nomadr</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

	<meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no"/>
	<script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
	<script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

	<%= stylesheet_link_tag    'style', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'slider', 'data-turbolinks-track' => true %>

	<%= csrf_meta_tags %>
</head>

<body data-no-turbolink="true"> <!-- Turn off turbo links (if turbolinks is on it removes page refresh, meaning naviation wil not work)-->

	<div id="container">
		<div id="contentLayer"></div>

			<%= render '/layouts/nav' %> <!-- Render top navigation, defined by _nav.html.erb -->


				<div id="content">

					<div class="notification"> 
						<p class="notice"><%= notice %></p> <!-- Signed in/ Out notification-->
			       		<p class="alert"><%= alert %></p> <!-- Slert notification -->
			       	</div>

				<%= yield %>


				</div>
			<%= render '/layouts/bottom' %> <!-- Render bottom navigation, defined by _nav.html.erb -->

	</div>
</body>
</html>

